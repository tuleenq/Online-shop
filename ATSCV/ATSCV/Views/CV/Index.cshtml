@{
    ViewData["Title"] = "CV Management";
}

<!DOCTYPE html>
<html lang="en">


    <section class="cv-view-section py-5">

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh; 
        }

        .button-container {
            position: fixed;
            top: 50%; /* Vertically center the buttons */
            right: 20px; /* Position the buttons on the right */
            transform: translateY(-50%); /* Adjust to perfectly center the buttons */
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .button-container button {
                padding: 10px;
                font-size: 16px;
                cursor: pointer;
                width: 150px;
                background-color: #007bff; /* Blue background */
                color: white; /* White text */
                border: none; /* Remove border */
                border-radius: 5px; /* Optional: rounded corners */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Optional: shadow effect */
            }

                .button-container button:hover {
                    background-color: #0056b3; /* Darker blue on hover */
                }

        .content {
            padding: 20px;
            font-size: 18px;
        }

            .content h1 {
                margin-top: 40px;
            }
    </style>

    <div class="button-container">
        <button id="viewCVButton" class="btn btn-primary btn-lg">View CV</button>

        <button onclick="window.location.href='@Url.Action("EditCV", "CV")'">Edit CV</button>
        <button onclick="window.location.href='@Url.Action("DownloadCV", "CV")'">Download CV</button>
            <button onclick="window.location.href='@Url.Action("craete", "CV")'">New CV</button>
        <button onclick="window.location.href='@Url.Action("GetPreviousCV", "CV")'">Get Previous CV</button>
           
    </div>

    <div class="content">
        @* <h1>Welcome to CV Management</h1>
        <p>Use the buttons on the right to manage CVs.</p> *@
        <div class="cv-content" id="cvContent"></div>
    </div>
    </section>
<script>
    debugger
    document.addEventListener("DOMContentLoaded", function () {
        // Retrieve the createdResumeId from localStorage (assuming it was saved there)
        const createdResumeId = localStorage.getItem('createdResumeId');

        if (createdResumeId) {
            document.getElementById("viewCVButton").addEventListener("click", async function () {
                try {
                    const response = await fetch(`https://localhost:7146/api/Template/${createdResumeId}`);

                    if (response.ok) {
                        const result = await response.json();
                        const resumeHtml = result.cvHtml; // Get the HTML content of the CV

                        // Insert the resume HTML into the page
                        document.getElementById("cvContent").innerHTML = resumeHtml;

                        const downloadButtonHtml = `
                            <div style="text-align: center; margin-top: 20px;">
                                <button id="downloadCv" class="btn btn-secondary btn-lg">Download as PDF</button>
                            </div>
                        `;
                        document.getElementById("cvContent").insertAdjacentHTML('beforeend', downloadButtonHtml);

                        document.getElementById("downloadCv").addEventListener("click", function () {
                            const { jsPDF } = window.jspdf; // Use jsPDF to generate a PDF
                            const doc = new jsPDF();

                            doc.html(document.getElementById("cvContent"), {
                                callback: function (doc) {
                                    doc.save("resume.pdf");
                                },
                                x: 10,
                                y: 10
                            });
                        });

                    } else {
                        alert("Failed to load CV. Please try again.");
                    }
                } catch (error) {
                    alert("An error occurred while fetching the CV.");
                }
            });
        }
    });

</script>
</html>
