@page

@model ShopRazor.Pages.products.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class=" col-6">
            
        </div>

         <div class=" col-6 text-end">
             <a asp-page="/products/create"  class=" btn btn-primary">
                <i class="bi bi-plus-square"></i>  Create New Product

             </a>

         </div>
    </div>
<h1>Products List</h1>
<table class=" table table-borderde table-striped">
    <thead>
       <tr>
        <th>
            Product Name
        </th>
        <th>
            ID
        </th>
        <th >Price</th>
                <th>StockQuantity</th>
                <th>IsPaid</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var obj in Model.ProductList.OrderBy(u=>u.Id))
        {
            <tr>
                <td>
                @obj.Name
            </td>
            <td>@obj.Id</td>
                <td>@obj.Price</td>
                <td>@obj.StockQuantity</td>
                <td>@obj.IsPaid</td>
                <td>
    <div class="btn-group" role="group">
        <a asp-page="/products/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-page="/products/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
            <i class="bi bi-trash3"></i> Delete
        </a>
    </div>
</td>

        </tr>
        }
    </tbody>

</table>
</div>