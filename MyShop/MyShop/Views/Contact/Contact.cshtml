@model ContactFormModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="features-section py-5 bg-light">
    <div class="container d-flex justify-content-center">
        <div style="max-width: 800px; width: 100%; background: white; padding: 30px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
            <h2 class="text-center mb-4">Contact Us:</h2>

            <!-- Form submission using ASP.NET Core MVC model binding -->
            <form method="post" asp-action="Contact" asp-controller="Contact">
                @Html.AntiForgeryToken() <!-- Anti-forgery token for security -->
                <!-- Name and Email input fields -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <input asp-for="Name" class="form-control form-control-lg" placeholder="Your name" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Your email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Message input field -->
                <div class="form-group mb-4">
                    <textarea asp-for="Message" class="form-control form-control-lg" rows="6" placeholder="Your message" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <!-- Submit button -->
                <div class="text-center">
                    <button type="submit" class="btn btn-danger px-5 py-2">Send Message</button>
                </div>
            </form>

            <!-- Success/Error message display -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-4">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-4">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>
</section>

<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-md-3">
                <img src="~/Images/box.png" alt="Same Day Delivery" class="mb-sm-1" style="width: 40px; height: 40px;">
                <h5>Same Day/Next Day Delivery</h5>
                <p>Next day delivery on most orders in Jordan - Same day available</p>
            </div>
            <div class="col-md-3">
                <img src="~/Images/shopping-cart.png" alt="Biggest Selection" class="mb-2" style="width: 40px; height: 40px;">
                <h5>Biggest Selection</h5>
                <p>Largest collection of any store in MENA</p>
            </div>
            <div class="col-md-3">
                <img src="~/Images/user-talking-with-speech-bubble.png" alt="Top-notch Support" class="mb-2" style="width: 40px; height: 40px;">
                <h5>Top-notch Support</h5>
                <p>We are always happy to help in any way we can</p>
            </div>
            <div class="col-md-3">
                <img src="~/Images/secure-payment.png" alt="Secure Payments" class="mb-2" style="width: 40px; height: 40px;">
                <h5>Secure Payments</h5>
                <p>Cash on Delivery available</p>
            </div>
        </div>
    </div>
</section>